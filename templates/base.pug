mixin link(title, url)
  li
    a(href=url)= title
    if block
      block

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    meta(description=description || 'izolate is a full-stack software engineer, UI designer, and some other things too.')
    if keywords
      meta(keywords=keywords.join(', '))

    title= title || 'izolate'

    block css
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/modern-normalize/0.5.0/modern-normalize.min.css')
      link(rel='stylesheet', href='/assets/hybrid.css')
      link(rel='stylesheet', href='/assets/index.css')

    block scripts
      script(src='/assets/index.js', defer)

  body
    block content

    #footer.container
      img.separator(alt='separator made of 3 primary shapes', src='/assets/img/bauhaus.svg')
      block footer
        nav
          a(href='/') home
          | &nbsp; - &nbsp;
          a(href='/blog') blog
          | &nbsp; - &nbsp;
          a(href='/contact') contact
